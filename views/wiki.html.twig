{% set baseUrl = 'http://' ~ app.request.host ~ app.request.basepath %}

<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	
		<link href="{{ baseUrl }}/css/{{ app.stylesheet }}" rel="stylesheet">
		<link href="{{ baseUrl }}/css/styles.css" rel="stylesheet">
		<link href="{{ baseUrl }}/css/bootstrap-responsive.min.css" rel="stylesheet">
		<title>{% block title %}{% endblock %} - Miki.</title>
	
		{% block stylesheets %}
		{% endblock %}

		<link rel="shortcut icon" href="/favicon.ico">
		<base href="{{ baseUrl }}/">
		
	</head>

	<body>
		<div class="navbar navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</a>
						
					<ul class="nav">
						<li class="category">
							{% for category in page.categories %}
							<a>{{ category }}/</a>
							{% endfor %}
						</li>
					    <li class="dropdown">
					    	<a class="dropdown-toggle brand" data-toggle="dropdown">
					    		<strong>{{ page.name }}</strong>
					    		{% if page.siblings is defined %}<b class="caret"></b>{% endif %}
					    	</a>
							{% if page.siblings is defined %}
						    <ul class="dropdown-menu">
							{% for sibling in page.siblings %}
								<li>
									<a href="{{sibling.url}}">{{sibling.name}}</a>
								</li>
							{% endfor %}
					    	</ul>
							{% endif %}
					    </li>
					</ul>
					
					<div class="nav-collapse" id="main-menu">
						<ul id="main-menu-right" class="nav pull-right">
							<li><a href="{{ app.request.basepath }}/" id="menu_home"><i class="icon-home"></i> Home</a></li>
							
							{% if app.request.attributes.get('_route') != 'page_edit' %}
							<li>
								<a href="{{ path('page_edit', { wikiPage: page.url }) }}" id="page_edit">
									<i class="icon-edit"></i>
									Edit Page
								</a>
							</li>
							{% endif %}
							{% if app.auth %}
							<li>
								<a href="{{ path('logout') }}">
									<i class="icon-off"></i>
									Logout
								</a>
							</li>
							{% endif %}
						</ul>
					</div>
				</div>
			</div>
		</div>
		
		<div class="container">

		{% block content %}
		{% endblock %}

			<hr>

			<footer>
				<small>File: {{ page.file }}{% if page.lastMod is defined %} (Last Updated: {{ page.lastMod|date('d.m.Y, H:i') }}){% endif %}</small>
			</footer>
		</div>

		<script src="js/jquery-1.7.2.min.js" type="text/javascript"></script>
		<script src="js/bootstrap.min.js" type="text/javascript"></script>
		<script src="js/jquery-plugins.min.js" type="text/javascript"></script>
		<script src="js/functions.js" type="text/javascript"></script>

	</body>
</html>
